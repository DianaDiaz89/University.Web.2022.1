
@model University.BL.DTOs.InstructorDTO



@{ ViewBag.Title = "Edit"; }



<h2>Create</h2>



@Html.ValidationSummary(false, "", new { @class = "text-danger" })



<form action="/Instructors/Edit" method="post">



    <div class="form-row">
        @Html.HiddenFor(m => m.ID)
        <div class="col-md-4">
            @Html.LabelFor(m => m.LastName)
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the Last Name", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })



        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.FirstMidName)
            @Html.EditorFor(m => m.FirstMidName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the FirstMid Name", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.FirstMidName, "", new { @class = "text-danger" })



        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.HireDate)
            @Html.EditorFor(m => m.HireDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the HireDate", @autocomplete = "off" } })



        </div>
    </div>



    <div class="form-row">
        <div class="col-md-12">
            <br />
            <input type="submit" name="btnEdit" value="Edit" class="btn btn-primary" />
            @Html.ActionLink("Back", "Index", "Instructors", null, new { @class = "btn btn-primary" })
        </div>
    </div>



</form>

